{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "build",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "declaration": true,
        "declarationDir": "build/types",
        "types": [
            "node"
        ]
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}